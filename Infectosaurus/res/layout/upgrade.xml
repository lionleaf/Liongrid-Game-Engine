<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:infecto="http://schemas.android.com/apk/res/com.liongrid.infectosaurus"
  android:orientation="horizontal"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
    <ScrollView android:layout_height="fill_parent" android:layout_width="wrap_content" android:id="@+id/scrollView1">
        <LinearLayout 
        	android:id="@+id/linearLayout1" 
        	android:layout_width="fill_parent" 
        	android:layout_height="fill_parent">
        	
            <com.liongrid.infectosaurus.TalentTree 
            	android:id="@+id/talentTree1" 
            	android:layout_width="wrap_content" 
            	android:layout_height="wrap_content">
            	
                <com.liongrid.infectosaurus.TalentTier android:id="@+id/talentTier1">
                    <com.liongrid.infectosaurus.TalentIcon 
                    	android:text="Speed" 
                    	android:id="@+id/talentIcon3"
                    	infecto:upgrade="SpeedUpgrade"></com.liongrid.infectosaurus.TalentIcon>
                </com.liongrid.infectosaurus.TalentTier>
				<com.liongrid.infectosaurus.TalentTier android:id="@+id/talentTier2">
					<com.liongrid.infectosaurus.TalentIcon 
						android:id="@+id/talentIcon2" 
						infecto:upgrade="MeleeDamageUpgrade"
						android:text="Damage"></com.liongrid.infectosaurus.TalentIcon>
					<com.liongrid.infectosaurus.TalentIcon 
						android:id="@+id/talentIcon1" 
						infecto:upgrade="HealthUpgrade"
						android:text="Health"></com.liongrid.infectosaurus.TalentIcon>
                </com.liongrid.infectosaurus.TalentTier>
            </com.liongrid.infectosaurus.TalentTree>
            
            </LinearLayout>
    </ScrollView>
    
    
    <RelativeLayout 
    	android:layout_alignBaseline="@+id/RelativeLayout1" 
    	android:layout_height="fill_parent" 
    	android:layout_width="fill_parent" 
    	android:id="@+id/RelativeLayout1" >
        
        <TextView 
        	android:id="@+id/upgradeDescriptionText" 
        	android:text="@string/upgradeDefaultDescription"
        	android:layout_alignParentLeft="true" 
        	android:layout_alignParentTop="true" 
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"></TextView>
        
        <TextView 
        	android:id="@+id/upgradeInfoText" 
        	android:text="TextView" 
        	android:layout_alignParentLeft="true"
        	android:layout_alignParentBottom="true"
        	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content"></TextView>
        
        <Button 
        	android:id="@+id/purchaseUpgradeButton" 
        	android:text="@string/upgrade"
        	android:layout_alignParentRight="true"
        	android:layout_alignParentBottom="true" 
        	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content" ></Button>
    
    </RelativeLayout>

    
</LinearLayout>
